{
  "name": "@bluescroll/hap",
  "version": "0.1.0",
  "description": "Official HAP (Human Application Protocol) SDK for JavaScript/TypeScript",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "hap",
    "human-application-protocol",
    "verification",
    "job-applications",
    "ed25519",
    "jws"
  ],
  "author": "BlueScroll Inc.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/BlueScroll/hap.git",
    "directory": "packages/hap-js"
  },
  "homepage": "https://github.com/BlueScroll/hap",
  "bugs": {
    "url": "https://github.com/BlueScroll/hap/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "jose": "^5.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  }
}
